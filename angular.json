{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angular-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": "en-US",
        "locales": {
          "pt-BR": {
            "translation": "src/i18n/content.pt.xlf",
            "baseHref": "pt-BR/"
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/angular-app/browser",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": ["src/favicon.ico", "src/assets", "src/manifest.webmanifest"],
            "styles": [
              "src/styles.scss",
              "node_modules/primeng/resources/themes/lara-light-indigo/theme.css",
              "node_modules/primeng/resources/themes/lara-dark-indigo/theme.css",
              "node_modules/primeng/resources/primeng.min.css",
              "node_modules/primeicons/primeicons.css",
              "node_modules/font-awesome/css/font-awesome.min.css"
            ],
            "scripts": ["node_modules/marked/marked.min.js"],
            "localize": true,
            "i18nMissingTranslation": "warning",
            "serviceWorker": true,
            "ngswConfigPath": "ngsw-config.json"
          },
          "configurations": {
            "en-US": {
              "localize": ["en-US"]
            },
            "pt-BR": {
              "localize": ["pt-BR"]
            },
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "750kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.development.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "angular-app:build:production,en-US"
            },
            "production-pt": {
              "browserTarget": "angular-app:build:production,pt"
            },
            "development": {
              "browserTarget": "angular-app:build:development,en-US"
            },
            "development-pt": {
              "browserTarget": "angular-app:build:development,pt"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "angular-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": ["src/favicon.ico", "src/assets", "src/manifest.webmanifest"],
            "styles": ["@angular/material/prebuilt-themes/pink-bluegrey.css", "src/styles.scss"],
            "scripts": [],
            "karmaConfig": "karma.conf.js",
            "codeCoverage": true
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/angular-app/server",
            "main": "server.ts",
            "tsConfig": "tsconfig.server.json",
            "i18nMissingTranslation": "warning",
            "inlineStyleLanguage": "scss"
          },
          "configurations": {
            "production": {
              "outputHashing": "media",
              "localize": true
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "sourceMap": true,
              "extractLicenses": false,
              "vendorChunk": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.development.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve-ssr": {
          "builder": "@nguniversal/builders:ssr-dev-server",
          "configurations": {
            "development": {
              "browserTarget": "angular-app:build:development",
              "serverTarget": "angular-app:server:development"
            },
            "production": {
              "browserTarget": "angular-app:build:production",
              "serverTarget": "angular-app:server:production"
            }
          },
          "defaultConfiguration": "development"
        },
        "prerender": {
          "builder": "@nguniversal/builders:prerender",
          "options": {
            "browserTarget": "angular-app:build:production",
            "serverTarget": "angular-app:server:production",
            "routes": ["/"]
          },
          "configurations": {
            "production": {
              "browserTarget": "angular-app:build:production",
              "serverTarget": "angular-app:server:production"
            },
            "development": {
              "browserTarget": "angular-app:build:development",
              "serverTarget": "angular-app:server:development"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "central-hash-api-client": {
      "projectType": "library",
      "root": "projects/central-hash-api-client",
      "sourceRoot": "projects/central-hash-api-client/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/central-hash-api-client/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/central-hash-api-client/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/central-hash-api-client/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": ["@angular-eslint/schematics"]
  }
}
